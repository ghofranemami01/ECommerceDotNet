@{
    ViewData["Title"] = "Accueil";
}

<!-- ===================== -->
<!-- CAROUSEL PATISSERIE -->
<!-- ===================== -->
<div id="patisserieCarousel" class="carousel slide mb-5" data-bs-ride="carousel">

    <!-- Indicateurs -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#patisserieCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#patisserieCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#patisserieCarousel" data-bs-slide-to="2"></button>
    </div>

    <!-- Images -->
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="~/images/pat1.jpg" class="d-block w-100 carousel-img" alt="Gâteaux artisanaux">
            <div class="carousel-caption d-none d-md-block">
                <h3>Gâteaux artisanaux</h3>
                <p>Fraîcheur et savoir-faire</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/patisserie2.jpg" class="d-block w-100 carousel-img" alt="Pâtisserie fine">
            <div class="carousel-caption d-none d-md-block">
                <h3>Pâtisserie fine</h3>
                <p>Élégance et gourmandise</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/images/patisserie3.jpg" class="d-block w-100 carousel-img" alt="Desserts gourmands">
            <div class="carousel-caption d-none d-md-block">
                <h3>Desserts gourmands</h3>
                <p>Le goût de l’excellence</p>
            </div>
        </div>

    </div>

    <!-- Contrôles -->
    <button class="carousel-control-prev" type="button" data-bs-target="#patisserieCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#patisserieCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- ===================== -->
<!-- HERO SECTION -->
<!-- ===================== -->
<div class="hero-section text-white py-5"
     style="background: linear-gradient(135deg, #1f2933, #374151);">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Bienvenue chez <span class="hero-brand">MEMIETTE</span>
                </h1>

                <p class="lead mb-4">
                    Découvrez nos pâtisseries artisanales, préparées avec passion et ingrédients de qualité.
                </p>

                <div class="d-flex gap-3">
                    <a asp-controller="Product" asp-action="Index"
                       class="btn btn-warning btn-lg px-4">
                        <i class="fas fa-shopping-bag"></i> Voir nos produits
                    </a>

                    <a asp-controller="Panier" asp-action="Index"
                       class="btn btn-outline-warning btn-lg px-4">
                        <i class="fas fa-shopping-cart"></i> Mon panier
                    </a>
                </div>
            </div>

            <div class="col-lg-6 text-center">
                <i class="fas fa-cake-candles hero-icon"></i>
            </div>

        </div>
    </div>
</div>

<!-- ===================== -->
<!-- FEATURES -->
<!-- ===================== -->
<div class="container my-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="fw-bold">Pourquoi choisir MEMIETTE ?</h2>
            <p class="text-muted">Une expérience gourmande haut de gamme</p>
        </div>
    </div>

    <div class="row">

        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-shipping-fast feature-icon"></i>
                    <h5 class="fw-bold">Livraison rapide</h5>
                    <p class="text-muted">24–48h partout</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-lock feature-icon"></i>
                    <h5 class="fw-bold">Paiement sécurisé</h5>
                    <p class="text-muted">Transactions protégées</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-undo feature-icon"></i>
                    <h5 class="fw-bold">Retour facile</h5>
                    <p class="text-muted">30 jours garantis</p>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- ===================== -->
<!-- ACTIONS RAPIDES -->
<!-- ===================== -->
<div class="container my-5">
    <div class="row text-center mb-4">
        <h3 class="fw-bold">Actions rapides</h3>
    </div>

    <div class="row justify-content-center">

        <div class="col-md-3 mb-4">
            <div class="card h-100 text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-shopping-cart action-icon"></i>
                    <h5>Mon panier</h5>
                    <p class="text-muted">Voir mes articles</p>
                    <a asp-controller="Panier" asp-action="Index"
                       class="btn btn-outline-dark">
                        Accéder
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 text-center shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-store action-icon"></i>
                    <h5>Produits</h5>
                    <p class="text-muted">Explorer la boutique</p>
                    <a asp-controller="Product" asp-action="Index"
                       class="btn btn-outline-dark">
                        Voir
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- ===================== -->
<!-- CSS LOCAL -->
<!-- ===================== -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .carousel-img {
        height: 500px;
        object-fit: cover;
        filter: brightness(0.85);
    }

    .hero-brand {
        color: #d4a373;
    }

    .hero-icon {
        font-size: 8rem;
        color: #d4a373;
        opacity: 0.15;
    }

    .feature-icon {
        font-size: 2.5rem;
        color: #d4a373;
        margin-bottom: 15px;
    }

    .action-icon {
        font-size: 2rem;
        color: #d4a373;
        margin-bottom: 10px;
    }

    .card {
        border-radius: 14px;
    }

    .btn-warning {
        background-color: #d4a373;
        border-color: #d4a373;
        color: #1f2933;
        font-weight: 600;
    }

        .btn-warning:hover {
            background-color: #c08c5a;
            border-color: #c08c5a;
            color: #fff;
        }
</style>
