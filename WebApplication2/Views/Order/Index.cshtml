@model IList<WebApplication2.Models.Order>

@{
    ViewBag.Title = "Commandes Admin";
}

<h1 class="text-center mb-4">
    <i class="fas fa-clipboard-list"></i> Gestion des commandes
</h1>

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Id</th>
                    <th>Client</th>
                    <th>Email</th>
                    <th>Total (€)</th>
                    <th>Status</th>
                    <th>Payé</th>
                    <th>Date commande</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CustomerName</td>
                        <td>@order.Email</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>@order.OrderStatus</td>
                        <td>@order.PaymentStatus</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm mb-1">
                                <i class="fas fa-eye"></i> Détails
                            </a>
                            <form asp-action="Delete" asp-route-id="@order.Id" method="post" style="display:inline-block" onsubmit="return confirm('Supprimer cette commande ?');">
                                <button type="submit" class="btn btn-danger btn-sm mb-1">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        <i class="fas fa-exclamation-circle"></i> Aucune commande trouvée.
    </div>
}
