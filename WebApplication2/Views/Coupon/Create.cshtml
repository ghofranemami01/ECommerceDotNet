@model WebApplication2.Models.Coupon

@{
    ViewData["Title"] = "Créer un Coupon";
}

<h1>Créer un Coupon</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" placeholder="Ex: PROMO10" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-select" asp-items="ViewBag.TypeList"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Value" class="text-danger"></span>
                <small class="form-text text-muted">Pourcentage (ex: 10) ou montant fixe (ex: 5.00)</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="MinOrder" class="control-label"></label>
                <input asp-for="MinOrder" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="MinOrder" class="text-danger"></span>
                <small class="form-text text-muted">Montant minimum de commande (optionnel)</small>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="MaxUsePerUser" class="control-label"></label>
                        <input asp-for="MaxUsePerUser" class="form-control" type="number" />
                        <span asp-validation-for="MaxUsePerUser" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="MaxTotalUse" class="control-label"></label>
                        <input asp-for="MaxTotalUse" class="form-control" type="number" />
                        <span asp-validation-for="MaxTotalUse" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

