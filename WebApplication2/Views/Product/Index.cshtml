@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Liste des produits";
    var categories = ViewData["Categories"] as IEnumerable<WebApplication2.Models.Category>;
}

<div class="container my-4">

    <!-- ================= FILTRES DYNAMIQUES ================= -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body py-3">
            <div class="row justify-content-center g-2 align-items-center">

                <!-- Recherche -->
                <div class="col-lg-3 col-md-4">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="searchInput"
                               class="form-control"
                               placeholder="Nom du produit..." />
                    </div>
                </div>

                <!-- Catégorie -->
                <div class="col-lg-2 col-md-3">
                    <select id="categorySelect" class="form-select form-select-sm">
                        <option value="">Toutes les catégories</option>
                        @foreach (var c in categories ?? Enumerable.Empty<WebApplication2.Models.Category>())
                        {
                            <option value="@c.CategoryId">@c.CategoryName</option>
                        }
                    </select>
                </div>

                <!-- Prix -->
                <div class="col-lg-3 col-md-4">
                    <div class="input-group input-group-sm">
                        <input type="number" step="0.01" id="minPrice"
                               class="form-control" placeholder="Prix min" />
                        <span class="input-group-text">-</span>
                        <input type="number" step="0.01" id="maxPrice"
                               class="form-control" placeholder="Prix max" />
                    </div>
                </div>

                <!-- Tri -->
                <div class="col-lg-2 col-md-3">
                    <select id="sortSelect" class="form-select form-select-sm">
                        <option value="">Tri</option>
                        <option value="price_asc">Prix ↑</option>
                        <option value="price_desc">Prix ↓</option>
                        <option value="name_asc">Nom A→Z</option>
                        <option value="name_desc">Nom Z→A</option>
                    </select>
                </div>

            </div>
        </div>
    </div>

    <!-- ================= ADMIN : AJOUT PRODUIT ================= -->
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <div class="text-center mb-4">
            <a asp-controller="Product"
               asp-action="Create"
               class="btn btn-success">
                <i class="fas fa-plus"></i> Ajouter un produit
            </a>
        </div>
    }

    <!-- ================= LISTE DES PRODUITS ================= -->
    <div class="row g-4" id="productsContainer">
        @foreach (var product in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="card h-100 product-card shadow-sm text-center"
                     style="cursor:pointer;"
                     onclick="window.location.href='@Url.Action("Details", "Product", new { id = product.ProductId })'">

                    <img src="@Url.Content("~/images/" + (product.Image ?? "noimage.jpg"))"
                         class="card-img-top"
                         alt="@product.Name" />

                    <div class="card-body d-flex flex-column align-items-center">

                        <h5 class="card-title text-primary">
                            @product.Name
                        </h5>

                        <span class="badge bg-secondary mb-2">
                            @(product.Category?.CategoryName ?? "Aucune catégorie")
                        </span>

                        <p class="fw-bold">
                            @product.Price.ToString("C")
                        </p>

                        <!-- UTILISATEUR SEULEMENT -->
                        @if (!User.IsInRole("Admin"))
                        {
                            <div class="d-grid w-75">
                                <a asp-controller="Panier"
                                   asp-action="AddProduct"
                                   asp-route-id="@product.ProductId"
                                   class="btn btn-success btn-sm">
                                    <i class="fas fa-shopping-cart"></i> Ajouter
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<!-- ================= STYLES ================= -->
<style>
    .product-card {
        transition: transform .3s ease, box-shadow .3s ease;
    }

        .product-card:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 20px rgba(0,0,0,.15);
        }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(function () {

            function loadProducts() {
                $.ajax({
                    url: '@Url.Action("Index", "Product")',
                    type: 'GET',
                    data: {
                        search: $('#searchInput').val(),
                        categoryId: $('#categorySelect').val(),
                        minPrice: $('#minPrice').val(),
                        maxPrice: $('#maxPrice').val(),
                        sort: $('#sortSelect').val()
                    },
                    success: function (result) {
                        let html = $(result).find('#productsContainer').html();
                        $('#productsContainer').html(html);
                    }
                });
            }

            $('#searchInput, #categorySelect, #minPrice, #maxPrice, #sortSelect')
                .on('input change', loadProducts);
        });
    </script>
}
