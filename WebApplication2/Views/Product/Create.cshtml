@model WebApplication2.ViewModels.CreateViewModel
@{
    ViewData["Title"] = "Ajouter un produit";
}

<div class="container my-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QteStock" class="form-label"></label>
                    <input asp-for="QteStock" class="form-control" />
                    <span asp-validation-for="QteStock" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Catégorie</label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="ImagePath" class="form-label"></label>
                    <input asp-for="ImagePath" type="file" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Créer</button>
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </form>
        </div>
    </div>
</div>
