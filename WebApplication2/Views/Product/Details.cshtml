@model WebApplication2.Models.Product

@{
    ViewData["Title"] = "Détails produit";
    var imagePath = "~/images/" + (Model.Image ?? "noimage.jpg");

    float averageRating = ViewBag.AverageRating ?? 0;
    int reviewCount = ViewBag.ReviewCount ?? 0;
    var reviews = ViewBag.Reviews as List<WebApplication2.Models.Review> ?? new();
    bool hasReviewed = ViewBag.HasReviewed ?? false;
    var reviewerNames = ViewBag.ReviewerNames as Dictionary<string, string> ?? new();
}

<div class="container mt-4">

    <!-- ================= PRODUIT ================= -->
    <div class="row">
        <div class="col-md-5">
            <img src="@Url.Content(imagePath)" class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-7">
            <h2>@Model.Name</h2>
            <span class="badge bg-primary mb-2">
                @(Model.Category?.CategoryName ?? "Aucune catégorie")
            </span>

            <h4 class="text-success mt-3">@Model.Price DT</h4>
            <p>Stock : <strong>@Model.QteStock</strong></p>

            <!-- ⭐ Note moyenne -->
            <div class="mb-3">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="@(i <= averageRating ? "fas" : "far") fa-star text-warning"></i>
                }
                <span class="ms-2">(@reviewCount avis)</span>
            </div>

            <!-- 🛒 Ajouter au panier (USER seulement) -->
            @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
            {
                <a asp-controller="Panier" asp-action="AddProduct" asp-route-id="@Model.ProductId" class="btn btn-success">
                    Ajouter au panier
                </a>
            }

            <!-- 🔧 Actions ADMIN -->
            @if (User.IsInRole("Admin"))
            {
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning me-2">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">Supprimer</a>
                </div>
            }
        </div>
    </div>

    <hr class="my-4" />

    <!-- ================= AVIS ================= -->
    <h3>Avis clients</h3>

    <!-- ➕ Ajouter un avis (USER seulement) -->
    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin") && !hasReviewed)
    {
        <form asp-action="AddReview" method="post" class="mb-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="productId" value="@Model.ProductId" />

            <div class="mb-2">
                <label>Note</label>
                <select name="rating" class="form-select" required>
                    <option value="">Choisir</option>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>

            <div class="mb-2">
                <label>Commentaire</label>
                <textarea name="comment" class="form-control"></textarea>
            </div>

            <button class="btn btn-primary">Envoyer</button>
        </form>
    }

    <!-- 📋 Liste des avis -->
    @if (reviews.Any())
    {
        foreach (var review in reviews)
        {
            <div class="card mb-3 @(review.IsApproved ? "" : "border-warning")">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <strong>@reviewerNames.GetValueOrDefault(review.UserId, review.UserId)</strong>
                        <small>@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </div>

                    <div>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="@(i <= review.Rating ? "fas" : "far") fa-star text-warning"></i>
                        }
                    </div>

                    <p class="mt-2">@(!string.IsNullOrWhiteSpace(review.Comment) ? review.Comment : "Aucun commentaire")</p>

                    @if (!review.IsApproved)
                    {
                        <span class="badge bg-warning text-dark">En attente</span>
                    }

                    <!-- ✅ Modération ADMIN -->
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="mt-2">
                            <form asp-controller="Review" asp-action="Approve" asp-route-id="@review.ReviewId" method="post" class="d-inline">
                                <button class="btn btn-success btn-sm">Approuver</button>
                            </form>

                            <form asp-controller="Review" asp-action="Reject" asp-route-id="@review.ReviewId" method="post" class="d-inline">
                                <button class="btn btn-danger btn-sm">Rejeter</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted">Aucun avis pour ce produit.</p>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">Retour</a>
</div>
