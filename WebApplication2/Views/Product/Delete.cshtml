@model WebApplication2.Models.Product
@{
    ViewData["Title"] = "Supprimer un produit";
}

<div class="container my-4">
    <h1>Supprimer le produit</h1>
    <hr />
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Prix</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.QteStock</dd>

        <dt class="col-sm-2">Catégorie</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">@Model.Image</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
