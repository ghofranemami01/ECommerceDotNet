@model WebApplication2.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Checkout";
    var addresses = ViewBag.Addresses as IList<WebApplication2.Models.Address> ?? new List<WebApplication2.Models.Address>();
}

<h2 class="mb-4">Passer la commande</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Informations de livraison</h5>
            </div>
            <div class="card-body">
                <form asp-action="Checkout" method="post">
                    @Html.AntiForgeryToken()
                    
                    @if (addresses.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label">Sélectionner une adresse enregistrée</label>
                            <select name="SelectedAddressId" class="form-select" id="addressSelect">
                                <option value="">Nouvelle adresse</option>
                                @foreach (var addr in addresses)
                                {
                                    <option value="@addr.AddressId">@addr.StreetAddress, @addr.City</option>
                                }
                            </select>
                        </div>
                        <hr />
                    }
                    
                    <div id="newAddressForm">
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label"></label>
                                    <input asp-for="City" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PostalCode" class="form-label"></label>
                                    <input asp-for="PostalCode" class="form-control" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Country" class="form-label"></label>
                                    <input asp-for="Country" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PaymentMethod" class="form-label"></label>
                        <select asp-for="PaymentMethod" class="form-select">
                            <option value="CashOnDelivery">Paiement à la livraison</option>
                            <option value="Stripe">Carte bancaire (Stripe)</option>
                            <option value="PayPal">PayPal</option>
                        </select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                    
                    <input type="hidden" name="TotalAmount" value="@Model.TotalAmount" />
                    @for (int i = 0; i < Model.CartItems.Count; i++)
                    {
                        <input type="hidden" name="CartItems[@i].ProductId" value="@Model.CartItems[i].ProductId" />
                        <input type="hidden" name="CartItems[@i].ProductVariantId" value="@Model.CartItems[i].ProductVariantId" />
                        <input type="hidden" name="CartItems[@i].ProductName" value="@Model.CartItems[i].ProductName" />
                        <input type="hidden" name="CartItems[@i].VariantInfo" value="@Model.CartItems[i].VariantInfo" />
                        <input type="hidden" name="CartItems[@i].Quantity" value="@Model.CartItems[i].Quantity" />
                        <input type="hidden" name="CartItems[@i].Price" value="@Model.CartItems[i].Price" />
                    }
                    
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-check"></i> Confirmer la commande
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Résumé de la commande</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Qté</th>
                            <th>Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    @item.ProductName
                                    @if (!string.IsNullOrEmpty(item.VariantInfo))
                                    {
                                        <br /><small class="text-muted">@item.VariantInfo</small>
                                    }
                                </td>
                                <td>@item.Quantity</td>
                                <td>@item.Price.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="2">Total</th>
                            <th>@Model.TotalAmount.ToString("C")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const addressSelect = document.getElementById('addressSelect');
    const newAddressForm = document.getElementById('newAddressForm');
    
    if (addressSelect) {
        addressSelect.addEventListener('change', function() {
            if (this.value) {
                newAddressForm.style.display = 'none';
            } else {
                newAddressForm.style.display = 'block';
            }
        });
    }
});
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
